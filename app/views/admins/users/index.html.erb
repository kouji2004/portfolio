<!--ユーザーの情報を一覧表示-->
<div class="container mt-4">
  <h2 class="text-center">会員一覧</h1>
  <table class="table table-hover mt-4 col-8 offset-2">
    <thead class="table-secondary">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">氏名</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
<% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.name%></td>
        <td><%= user.email %></td>
        <td>
          <% if user.is_delete %>
            <span style="color:gray;">退会</span>
          <% else %>
            <span style="color:green;">有効</span>
          <% end %>
        </td>
          <td><%= link_to '編集', edit_admins_user_path(user), class: "btn btn-secondary btn-sm "%></td>
      </tr>
      <% end %>
    </tbody>
  </table>

