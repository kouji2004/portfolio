<!--検索タグ-->
<div class="w-75"style="margin-left: 200px;text-align: center;">
  <%= form_with(model: @category, url: admins_categories_path, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :name, "カテゴリ名",class:"mt-3 mb-2" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "新規作成", class: "btn btn-primary" %>
    </div>
  <% end %>

  <table class="table mt-5 content">
    <thead>
      <tr>
        <th scope="col" class="w-25">ID</th>
        <th scope="col">カテゴリ</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td scope="row"><%= category.id %></td>
          <td><%= category.name %></td>
          <td><%= link_to "編集", edit_admins_category_path(category), class: "btn btn-outline-success  btn-sm " %></td>
          <td><%= link_to "削除", admins_category_path(category), method: :delete, class: " btn btn-outline-danger btn-sm " %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

