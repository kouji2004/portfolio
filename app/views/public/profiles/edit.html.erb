<%= form_with model: @profile, url: public_profile_path, method: :put, local: true do|f| %>

<%= f.label :image, '画像' %>
<%= f.file_field :image %>

<%= f.label :name, '名前' %>
<%= f.text_field :name %>

<%= f.label :gender, '性別' %>
<%= f.select :gender, Profile.genders_i18n.invert %>


<%= f.label :subbody, '一言' %>
<%= f.text_field :subbody %>

<%= f.label :mainbody, '自己紹介' %>
<%= f.text_field :mainbody %>
<%= f.submit "更新" %>

<% end %>
