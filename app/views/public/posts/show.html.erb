<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-9">
      <h2><%=@user.name%>さんの詳細ページ</h2>
      <div class=" row pt-3">
        <!--<#% @posts.each do |post| %>-->
          <div class="col-md-6 pt-3 mb-5 top-border">
            <!--<#% post.images.each do |image| %>-->
            <!--  <#%= image_tag(image, width:400, height:300)  %>-->
            <!--<#% end %>-->
            <%= image_tag @post.get_image[0],size: '320x240' %>
          </div>


          <div class="col-md-6 mb5 top-border">
            <h5 class="mt-5">どこで転ばれましたか？</h5>
            <p class="pb-5"><%= @post.title %></p>
            <h5>状況</h5>
            <p><%= @post.body %></p>
            <p><%= link_to @post.user.name, public_profile_path,class:"pt-5" %>さんのプロフィールへ</p>

          </div>
        <!--<#%end%>-->
      </div>
    </div>


<!--ここから右サイドバー-->
    <div class="col-md-3 text-center">
      <div class="card">
      <h2 class="profile-title">Profile</h2>
      <figure class="profile-image">
        <%= image_tag current_user.profile_image,size:"50x50" %>
      </figure>
        <%if current_user.name %>
          <p><%= @user.name %></p>
        <% else%>
          <h2>ゲストユーザー</p>
        <% end %>

        <!--<#%if @profile.gender.nil? %>-->
        <!--  <p><#%= @user.gender %></p>-->
        <!--<#% else%>-->
        <!--  <p>性別</p>-->
        <!--<#% end %>-->

           <h5>自己紹介</h5>
            <%if @profile&.mainbody%>
               <p><%= @profile&.mainbody %></p>
            <% else%>
               <p style="width: 250px;">お役に立つ情報を発信していきます。よろしくお願いします</p>
            <% end %>


          <h5>一言</h5>
            <%if @profile&.subbody %>
              <p ><%= @profile&.subbody %></p>
            <% else%>
              <p>よろしくお願いします</p>
            <% end %>
    </div>
  </div>
  </div>

         <!--コメント表示-->
        <% @post.comments.each do |comment| %>
          <%= image_tag current_user.profile_image,size:"50x50" %>
          <%= comment.user.name %>
          <%= comment.created_at.strftime('%Y/%m/%d') %>
          <%= comment.comment %>

        <!--コメントした人だけが削除できる-->
          <% if comment.user == current_user %>
            <%= link_to "削除", public_post_comment_path(comment.post, comment), method: :delete %>
          <% end %>
        <% end %>

        <!--コメント投稿-->
        <%= form_with model: [@post, @comment], url: public_post_comments_path(@post) do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに"  %>
          <p class="mt-3" style="margin-right: 200px;"><%= f.submit "送信する" %></p>
        <% end %>


</div>




