<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-7">
      <h2><%=@user.name%>さんが投稿しました</h2>
      <div class=" row pt-3">
        <% @posts.each do |post| %>
        <div class="col-md-6 pt-3 mb-5 top-solid", style:"text-align: center;">
          <% post.images.each do |image| %>
          <%= image_tag(image, width:320, height:240)  %>
        <% end %>
        </div>

        <div class="col-md-6 mb5 top-solid">
          <h5 class="mt-3  text-center"style="color: orange;">どこで転ばれましたか？</h5>
          <p class="text-center"style="text-align: -webkit-center;" ><%= post.title %></p>
          <h5 class=" text-center" style="color: orange;">状況</h5>
          <p style="text-align: -webkit-center;"><%= post.body %></p>
          <h5 class=" text-center"style="color: orange;">対策</h5>
          <p style="text-align: -webkit-center;"><%= post.prevention %></p>
          <%= link_to "詳細", public_post_path(post.id),class:"sho-btn" %>
          <!--<p class="top-border-time">投稿日時：<#%= post.created_at.strftime('%Y/%m/%d') %></p>-->
        </div>
        <%end%>
      </div>
    </div>

    <!--ここから右サイドバー-->
    <div class="col-md-3 text-center profile-side">
      <div class="card">
        <h2 class="profile-title">Profile</h2>
        <figure class="profile-image">
          <%= image_tag @user.profile_image,size:"50x50" %>
        </figure>

        <%if current_user.name %>
          <p><%= @user.name %></p>
        <% else%>
          <h2>ゲストユーザー</p>
        <% end %>

        <!--<#%if @profile.gender.nil? %>-->
        <!--  <p><#%= @user.gender %></p>-->
        <!--<#% else%>-->
        <!--  <p>性別</p>-->
        <!--<#% end %>-->

        <h4>自己紹介</h4>
        <%if @profile&.mainbody? %>
          <p><%= @profile&.mainbody %></p>
        <% else%>
        <p style="width: 250px;">お役に立つ情報を発信していきます。よろしくお願いします</p>
        <% end %>

        <h4>一言</h4>
        <%if @profile&.subbody %>
          <p style="text-align: initial;"></p>
        <p ><%= @profile&.subbody %></p>
        <% else%>
          <p>よろしくお願いします</p>
        <% end %>

        <div class="d-flex" style="text-align: center;margin-left: 60px;">
        <p><a href="./links.html"><%=link_to"お気に入り/", favorites_public_profile_path(@user) %></a></p>

        <% if @user.name != "guestuser" %>
        <p class="ml-1"><%= link_to "編集", edit_public_profile_path, class:"text text-center" %></p>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




